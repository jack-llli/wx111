/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  color: #333;
}

/* 主按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
}

/* 价格样式 */
.price {
  color: #e74c3c;
  font-weight: bold;
}

.price-symbol {
  font-size: 24rpx;
}

.price-int {
  font-size: 40rpx;
}

.price-decimal {
  font-size: 28rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
}

.tag-hot {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

.tag-recommend {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
}

.tag-premium {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 容器 */
.container {
  padding: 24rpx;
}
