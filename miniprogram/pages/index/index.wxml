<!--pages/index/index.wxml-->
<view class="page">
  <!-- Banner横幅 -->
  <view class="banner">
    <image class="banner-img" src="/images/banner.jpg" mode="aspectFill"></image>
    <view class="banner-content">
      <text class="banner-title">AI课程商城</text>
      <text class="banner-desc">开启您的人工智能学习之旅</text>
    </view>
  </view>

  <!-- 课程列表 -->
  <view class="course-list">
    <view class="course-item card" wx:for="{{courses}}" wx:key="id">
      <!-- 课程图片 -->
      <view class="course-image-wrapper">
        <image class="course-image" src="{{item.image}}" mode="aspectFill"></image>
        <view class="tag {{item.tag === '热门' ? 'tag-hot' : item.tag === '推荐' ? 'tag-recommend' : 'tag-premium'}}">
          {{item.tag}}
        </view>
      </view>

      <!-- 课程信息 -->
      <view class="course-info">
        <view class="course-name">{{item.name}}</view>
        <view class="course-desc">{{item.desc}}</view>
        
        <view class="course-footer">
          <view class="price">
            <text class="price-symbol">¥</text>
            <text class="price-int">{{item.price}}</text>
          </view>
          <button class="add-cart-btn" data-id="{{item.id}}" bindtap="addToCart">
            加入购物车
          </button>
        </view>
      </view>
    </view>
  </view>
</view>
