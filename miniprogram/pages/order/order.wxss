/* pages/order/order.wxss */
.page {
  padding: 24rpx;
  padding-bottom: 160rpx;
  min-height: 100vh;
}

.section {
  margin-bottom: 24rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 课程清单 */
.course-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-item:last-child {
  border-bottom: none;
}

.course-image {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.course-price-count {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.count {
  font-size: 24rpx;
  color: #999;
}

/* 价格明细 */
.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

.detail-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 12rpx 0;
}

/* 支付方式 */
.payment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.payment-item:last-child {
  margin-bottom: 0;
}

.payment-item.selected {
  border-color: #4A90E2;
  background: rgba(74, 144, 226, 0.05);
}

.payment-info {
  display: flex;
  align-items: center;
}

.payment-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.payment-name {
  font-size: 28rpx;
  color: #333;
}

.radio {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio.checked {
  border-color: #4A90E2;
}

.radio-dot {
  width: 20rpx;
  height: 20rpx;
  background: #4A90E2;
  border-radius: 50%;
}

/* 底部提交按钮 */
.submit-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.footer-price {
  display: flex;
  align-items: center;
}

.footer-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.submit-btn {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1.4;
}

.submit-btn:active {
  opacity: 0.8;
}
