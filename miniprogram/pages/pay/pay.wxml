<!--pages/pay/pay.wxml-->
<view class="page">
  <!-- 订单卡片 -->
  <view class="order-card card">
    <view class="card-header">
      <image class="shop-logo" src="/images/logo.png" mode="aspectFit"></image>
      <text class="shop-name">AI课程商城</text>
    </view>
    <view class="pay-amount">
      <text class="amount-label">支付金额</text>
      <view class="amount-value price">
        <text class="price-symbol">¥</text>
        <text class="price-int">{{totalPrice}}</text>
      </view>
    </view>
  </view>

  <!-- 订单信息 -->
  <view class="info-section card">
    <view class="info-title">订单信息</view>
    <view class="info-item">
      <text class="info-label">订单编号</text>
      <text class="info-value">{{orderNo}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">商品数量</text>
      <text class="info-value">{{totalCount}}件</text>
    </view>
    <view class="info-item">
      <text class="info-label">创建时间</text>
      <text class="info-value">{{createTime}}</text>
    </view>
  </view>

  <!-- 倒计时提示 -->
  <view class="countdown-tip">
    <text class="countdown-icon">⏰</text>
    <text class="countdown-text">请在 </text>
    <text class="countdown-time">{{countdownDisplay}}</text>
    <text class="countdown-text"> 内完成支付</text>
  </view>

  <!-- 底部按钮 -->
  <view class="pay-footer">
    <button class="pay-btn" bindtap="payNow">立即支付</button>
    <button class="cancel-btn" bindtap="cancelOrder">取消订单</button>
  </view>
</view>
