/* pages/pay/pay.wxss */
.page {
  padding: 24rpx;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 订单卡片 */
.order-card {
  padding: 40rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.shop-logo {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.shop-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.pay-amount {
  
}

.amount-label {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.amount-value {
  font-size: 72rpx;
}

.amount-value .price-symbol {
  font-size: 40rpx;
}

.amount-value .price-int {
  font-size: 72rpx;
}

/* 订单信息 */
.info-section {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  max-width: 400rpx;
  text-align: right;
  word-break: break-all;
}

/* 倒计时提示 */
.countdown-tip {
  text-align: center;
  padding: 24rpx;
  background: #fff3cd;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.countdown-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.countdown-text {
  font-size: 28rpx;
  color: #856404;
}

.countdown-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
  margin: 0 8rpx;
}

/* 底部按钮 */
.pay-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.pay-btn {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-bottom: 16rpx;
}

.pay-btn:active {
  opacity: 0.8;
}

.cancel-btn {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.cancel-btn:active {
  background: #f5f5f5;
}
