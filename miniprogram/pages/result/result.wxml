<!--pages/result/result.wxml-->
<view class="page">
  <view class="result-container">
    <!-- 成功图标 -->
    <view class="success-icon">
      <view class="icon-circle">
        <text class="icon-check">✓</text>
      </view>
    </view>

    <!-- 标题 -->
    <view class="result-title">支付成功</view>

    <!-- 提示文案 -->
    <view class="result-desc">恭喜您成功购买AI课程</view>

    <!-- 订单摘要 -->
    <view class="order-summary card">
      <view class="summary-item">
        <text class="summary-label">订单编号</text>
        <text class="summary-value">{{orderNo}}</text>
      </view>
      <view class="summary-item">
        <text class="summary-label">支付金额</text>
        <text class="summary-value price">¥{{totalPrice}}</text>
      </view>
      <view class="summary-item">
        <text class="summary-label">课程数量</text>
        <text class="summary-value">{{totalCount}}门</text>
      </view>
    </view>

    <!-- 操作按钮 -->
    <view class="action-buttons">
      <button class="primary-btn" bindtap="startLearning">开始学习</button>
      <button class="secondary-btn" bindtap="backToHome">返回首页</button>
    </view>
  </view>
</view>
