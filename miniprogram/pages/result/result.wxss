/* pages/result/result.wxss */
.page {
  min-height: 100vh;
  background: #fff;
}

.result-container {
  padding: 120rpx 48rpx 80rpx;
  text-align: center;
}

/* 成功图标 */
.success-icon {
  margin-bottom: 40rpx;
}

.icon-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  border-radius: 50%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.icon-check {
  font-size: 96rpx;
  color: #fff;
  font-weight: bold;
}

/* 标题和描述 */
.result-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.result-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

/* 订单摘要 */
.order-summary {
  padding: 32rpx;
  margin: 0 auto 60rpx;
  max-width: 600rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  max-width: 400rpx;
  text-align: right;
  word-break: break-all;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 24rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-bottom: 24rpx;
}

.primary-btn:active {
  opacity: 0.8;
}

.secondary-btn {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.secondary-btn:active {
  background: #f5f5f5;
}
