/* pages/cart/cart.wxss */
.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 48rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 60rpx;
}

/* 购物车列表 */
.cart-content {
  padding-bottom: 120rpx;
}

.cart-list {
  padding: 24rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.item-select {
  margin-right: 20rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background: #4A90E2;
  border-color: #4A90E2;
}

.checkbox .icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.item-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.item-price {
  margin-bottom: 16rpx;
}

.item-count {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.count-btn {
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background: #fff;
  color: #333;
  font-size: 32rpx;
  padding: 0;
  line-height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.count-btn:active {
  background: #f5f5f5;
}

.count-input {
  width: 80rpx;
  height: 48rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.item-delete {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.delete-icon {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.footer-select {
  display: flex;
  align-items: center;
  margin-right: auto;
}

.select-text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.footer-total {
  margin-right: 24rpx;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.checkout-btn {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #fff;
  border-radius: 48rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  border: none;
  line-height: 1.4;
}

.checkout-btn:active {
  opacity: 0.8;
}
